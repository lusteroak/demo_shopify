<h1>{{ product.title }}</h1>
<p>
  {{ product.price | money }}
</p>

<div>
  {{ product.description }}
  <img src="{{ product.featured_image | image_url: width: 450 }}" />
</div>

{% form 'product', product: product %}
  <select name="id">
    {% for product.variants %}{% endfor %}
  </select>
{% endform %}